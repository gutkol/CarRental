<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/_LayoutPage.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/CookiesStyles.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.js" type="text/javascript"></script>
    <title>@ViewBag.Title</title>
    @RenderSection("style", required: false)
    @RenderSection("script", required: false)
</head>
<body>
    <noscript><div class="alert alert-warning" role="alert"><strong>Uwaga! </strong>Przepraszamy, Twoja przeglądarka nie wspiera JavaScript! Do poprawnej obsługi strony wymagana jest włączona obsługa JavaScript!</div></noscript>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <img class="img-responsive" src="~/Images/CarRental-logo.jpg" @*style="width: 290px; height: 150px;"*@ />
            </div>
            <div class="col-md-12">
                <div class="well">
                    <nav class="nav">
                        <ul class="nav nav-pills">
                            <li><a href="/home/Glowna"><span class="glyphicon glyphicon-home"></span> Główna</a></li>
                            <li><a href="/home/Oferta">Oferta</a></li>
                            <li><a href="/home/Ofirmie">O firmie</a></li>
                            <li><a href="/home/Regulamin">Regulamin</a></li>
                            <li><a href="/home/Kontakt">Kontakt</a></li>
                            @Html.Partial("_LoginPartial")
                        </ul>
                        <ul class="nav nav-pills">
                            <li><img id="autamenu" src="~/Images/autamenu.png" /></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="panel-body">
            @RenderBody()
        </div>
    </div>
    <footer class="panel-footer">
        <p>&copy; @DateTime.Now.Year - Radosław Nowak CarRental Application</p>
    </footer>
    <script src="~/Scripts/CookiesScript.js"></script>
</body>
</html>
