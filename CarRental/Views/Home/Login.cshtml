@model CarRental.Models.LoginViewModel

@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/LoginStyles.css" rel="stylesheet" type="text/css" />
    @*<script src="~/Scripts/jquery-3.1.1.js" type="text/javascript"></script>*@
    @*<script src="~/Scripts/LoginScript.js" language="javascript" type="text/javascript"></script>*@
    <meta name="viewport" content="width=device-width" />
    <title>Login | CarRental</title>
    <style>
        .field-validation-error {
            color: red;
            font-weight: bold;
        }

        .input-validation-error {
            background-color: pink;
            border: 1px solid red;
        }

        .validation-summary-errors {
            font-weight: bold;
            color: red;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        @Html.AntiForgeryToken()
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="panel panel-login">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-6">
                                    <a href="#" class="active" id="login-form-link">Logowanie</a>
                                </div>
                                <div class="col-xs-6">
                                    <a href="/home/Register" id="register-form-link">Rejestracja</a>
                                </div>
                            </div>
                            <hr>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <form id="login-form" action="/home/Glowna" method="post" role="form" style="display: block;">
                                        <div class="form-group">
                                            @Html.TextBoxFor(x => x.Login, new { @class = "form-control", placeholder = "Nazwa użytkownika" })
                                        </div>
                                        <div class="form-group">
                                            @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Hasło"})
                                        </div>
                                        <div class="form-group text-center">
                                            @Html.CheckBoxFor(x => x.Remember)
                                            @Html.Label("Zapamiętaj mnie")
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-sm-6 col-sm-offset-3">
                                                    <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Zaloguj">
                                                </div>
                                            </div>
                                        </div>
                                        @*<div class="form-group">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="text-center">
                                                        <a href="http://phpoll.com/recover" tabindex="5" class="forgot-password">Zapomniałeś hasła?</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>*@
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>
