@model CarRental.Database.Pracownicy

@{
    ViewBag.Title = "Szczegóły pracownika | CarRental";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2 class="page-header">Szczegóły pracownika</h2>
<div class="area">
    <div class="col-md-8">
        <div class="row">
            <div>
                <dl class="dl-horizontal">
                    <dt>
                        <label>Imię: </label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.imie)
                    </dd>

                    <dt>
                        <label>Nazwisko: </label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.nazwisko)
                    </dd>

                    <dt>
                        <label>Data zatrudnienia: </label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.data_zatrudnienia)
                    </dd>

                    <dt>
                        <label>Stanowisko: </label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.stanowisko)
                    </dd>

                    <dt>
                        <label>Login: </label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Konta.login)
                    </dd>

                    <dt>
                        <label>Ulica: </label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Miejsca.ulica)
                    </dd>
                </dl>
            </div>
            <p>
                @Html.ActionLink("Edytuj", "EditWorker", "worker", new { id = Model.id_pracownika }, new { @class = "btn btn-default" })
                @Html.ActionLink("Powrót", "GetWorker", "worker", new { },new { @class = "btn btn-default" })
            </p>
        </div>
    </div>
</div>
