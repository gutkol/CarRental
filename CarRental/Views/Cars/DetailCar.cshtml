@model CarRental.Database.Samochody

@{
    ViewBag.Title = "Szczegóły samochodu | CarRental";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2 class="page-header">Szczegóły samochodu</h2>
<div class="area">
    @using (Html.BeginForm())
    {
        <div class="col-md-12">
            <div class="col-md-8">
                <div class="row">
                    <div class="form-group">
                        <label>ID: </label> @Model.id_samochodu
                    </div>
                    <div class="form-group">
                        <label>Marka: </label> @Model.Marka.marka1
                    </div>
                    <div class="form-group">
                        <label>Model: </label> @Model.Model.model1
                    </div>
                    <div class="form-group">
                        <label>Wyposażenie: </label> @Model.Wyposazenie.rodzaj_wyp
                    </div>
                    <div class="form-group">
                        <label>Typ: </label> @Model.Typ.typ1
                    </div>
                    <div class="form-group">
                        <label>Kolor: </label> @Model.Kolor.kolor1
                    </div>
                    <div class="form-group">
                        <label>Paliwo: </label> @Model.Paliwo.rodzaj_paliwa
                    </div>
                    <div class="form-group">
                        <label>Rok produkcji: </label> @Model.rok_prod r
                    </div>
                    <div class="form-group">
                        <label>Pojemność silnika: </label> @Model.poj_silnika cm<sup>3</sup>
                    </div>
                    <div class="form-group">
                        <label>Przebieg: </label> @Model.przebieg km
                    </div>
                    @Html.ActionLink("Powrót", "GetCar", "cars", new { }, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    }
</div>
